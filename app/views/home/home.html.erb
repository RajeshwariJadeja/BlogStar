<div class="jumbotron">
  <% if user_signed_in? %>
  <%= render "show"%>

  <% else %>
  <center>
    <h1>Welcome, new user!</h1>
    <p class="lead">
      You must sign in or sign up before you can access our site.
    </p>
    <div class="row-fluid">
      <div class="span6">
        <%= link_to "Sign In", new_user_session_path, :class => "btn btn-success" %>
      </div>
      <div class="span6">
        <%= link_to "Sign Up", new_user_registration_path, :class => "btn btn-success" %>
      </div>
    </div>
  </center>
  <% end %>
</div>