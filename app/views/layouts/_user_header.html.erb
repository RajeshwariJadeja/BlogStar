
<ul class="nav pull-right">
<% if user_signed_in? %>
<div>
  <div style="float: left "> 
    <%= link_to "Sign out", destroy_user_session_path, :method => :delete ,:class => "btn btn-primary"%></div>
  <div style="float: right ">
  <%= link_to "Users",users_path,:class => "btn btn-primary" %></div>
</div>
  <% else %>
  <div>
  <div style="float: left "> 
  <%= link_to "Sign in", "#my-modal",:class => "btn btn-primary", "data-toggle" => "modal"%></div>
  <div style="float: right ">
  <%= link_to "Sign up", "#my-modal1",:class => "btn btn-primary", "data-toggle" => "modal"%>
  </div>
    <div>
  <% end %>
</ul>
<div class="modal hide fade" id="my-modal" title="My modal">
  <div class="modal-header">
    <button aria-hidden="true" class="close" data-dismiss="modal" type="button">×</button>
    <h3 id="myModalLabel">Login</h3>
  </div>
  <div class="modal-body">
    <div class="border-form-div">
      
      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

      <%= devise_error_messages! %>
      <div id="errors">
       
      </div>


     
     
      <%= f.text_field :login ,autofocus: true,placeholder: 'Username Or Email_id'%><br>
      
      
      <%= f.password_field :password, :placeholder => 'Password' %>
      <br>
      
      <% if devise_mapping.rememberable? %>

      <%= f.check_box :remember_me,:class => "css_class" %><%= f.label :remember_me %>  
      <% end %>
      
      <%= f.submit "Sign in",:class => "btn btn-success" %>
      
      <% end %>
      <div class="container">
        
    </div>
    </div>
  </div>
  <div class="modal-footer">

   <div>
    <div style="float: left ">
    <%= button_to "Sign in with Twitter", user_omniauth_authorize_path(:twitter),:class => "btn btn-primary"%> 
       <%= button_to "Sign in with Google", user_omniauth_authorize_path(:google_oauth2),
       :class => "btn btn-primary"%>
     </div>
     <div style="float: right ">
    <%= button_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook),
       :class => "btn btn-primary"%> 
        <button aria-hidden="true" class="btn btn-danger" data-dismiss="modal">Close</button>

     </div>
   </div>
 </div>
</div>
</div>

<div class="modal hide fade" id="my-modal1" title="My modal">
  <div class="modal-header">
    <button aria-hidden="true" class="close" data-dismiss="modal" type="button">×</button>
    <h3 id="myModalLabel">Sign Up</h3>
  </div>
  <div class="modal-body">
    <div class="border-form-div">
     <%= form_for(resource, :as => resource_name,:html => { :multipart => true },:url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
   <%= f.file_field :image %>
  
  

  <%= f.text_field :user_name, autofocus: true,placeholder: 'User Name' %><br>
  <%= f.email_field :email, :placeholder => 'Email address' %><br>
  <% if f.object.password_required? %>
    <%= f.text_field :first_name, placeholder: 'First Name' %><br>
    <%= f.text_field :last_name,placeholder: 'Last Name' %><br>
    
    
    
    <%= f.password_field :password, :placeholder => 'Password' %><br>
    <%= f.password_field :password_confirmation, :placeholder => 'Password confirmation' %><br>
  <% end %>
  <%= f.submit "Sign up",:class=>'btn btn-primary' %>
  <% end %>
      
     
      <div class="container">
        
    </div>
    </div>
  </div>
  <div class="modal-footer">
    <div>
    <div style="float: left ">
    <%= button_to "Sign in with Twitter", user_omniauth_authorize_path(:twitter),:class => "btn btn-primary"%> 
       <%= button_to "Sign in with Google", user_omniauth_authorize_path(:google_oauth2),
       :class => "btn btn-primary"%>
     </div>
     <div style="float: right ">
    <%= button_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook),
       :class => "btn btn-primary"%> 
        <button aria-hidden="true" class="btn btn-danger" data-dismiss="modal">Close</button>

     </div>
   </div>
 </div>
</div>
</div>




